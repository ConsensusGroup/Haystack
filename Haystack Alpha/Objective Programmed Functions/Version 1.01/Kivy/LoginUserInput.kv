<Label>:
	font_size: 20 

<Button>:
	font_size: 20
	size: 120,30
	color: 0,0,0,1
	background_normal: ''
	background_color: (1, 1, 1, 1)

<LoginWidget>:
	canvas.before:
		Color:
			rgba: 0,0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
	Button:
		id: Login
		pos: 250, 150
		text: "Login"

	Label:
		id: UN1
		text: 'User Name:'
		pos: 125, 200

	Label:
		id: P
		text: 'Password:'
		pos: 125, 160
		
	TextInput:
		id: UserName
		text: ""
		pos: Login.pos.x,
		size: Login.size

	TextInput:
		id: Password
		text: ""

	Button:
		id: Register
		pos: 450, 150
		text: "Register"

	Button:
		pos: 5*self.width, self.height
		text: "Quit"
		on_press: root.ShutDown()

	
