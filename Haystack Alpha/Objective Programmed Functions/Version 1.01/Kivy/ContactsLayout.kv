<ContactsLayout>:
	BoxLayout:
		id: Split
		padding: 0
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				size_hint: (1, 0.05)
				spacing: 2
				TextInput:
					id: UserInput
					focus: True
					multiline: False 
					size_hint_x: 1-0.20 
					hint_text: "		search contracts"
					on_text: 
						if root.ReadInput(Text = UserInput.text, Function = "Contact").Found != []: Contact.size_hint_y= 0.5; root.On_Type(); ContactListBox.size_hint_y = 0.43;
						else: Contact.size_hint_y= 0.00001; ContactListBox.size_hint_y = 0.95; 
				Button:
					text: "Add Contact"
					size_hint_x: 0.20
					on_press: app.root.current = 'NewContact'

			BoxLayout:
				size_hint_y: 0.00001
				id: Contact
				ScrollView:
					GridLayout:
						id: ContactsList
						cols: 1
						spacing: 20
						padding: 20
						size_hint_y: None
						height: self.minimum_height

			BoxLayout:
				id: ContactListBox
				size_hint_y: 0.95
				ScrollView:
					GridLayout:
						id: UserContacts
						cols: 1
						spacing: 20
						padding: 20
						size_hint_y: None
						height: self.minimum_height

	BoxLayout:
		orientation: 'vertical'
		size_hint_x: 0.2
		spacing: 5
		Label:
			id: StatusLabel
			text: "Status"
			font_size: 15
		Button:
			text: "Settings"
		Button:
			text: "Messanger"
			on_press: app.root.current = "Messanger"
		Label:
			text: ""
		Button:
			text: "    New \n Message"
			on_press: app.root.current = 'NewMessage'
		Button:
			text: 'Logout'
			on_press: app.root.current = 'Login'
		Button:
			text: 'Quit'
			on_press: root.ShutDown()

<AddContactLayout>:
	BoxLayout:
		id: Split
		padding: 0
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			spacing: 5
			padding: 10
			Label:
				text: 'First name'
			
			TextInput:
				id: FirstName
				multiline: False

			Label:
				text: "Last name"

			TextInput:
				id: LastName
				multiline: False

			Label:
				text: 'add IOTA address'

			TextInput:	
				id: IOTAAddress
				multiline: False

			BoxLayout:
				size_hint_y: 0.2
				Label:
					text: ""

				Button:
					size_hint_x: 0.2
					text: "Finish"
					on_press: 
						if root.Add_Contact(FirstName = FirstName.text, LastName = LastName.text, Address = IOTAAddress.text).Pass == True: app.root.current = "Contacts";
						elif root.Add_Contact(FirstName = FirstName.text, LastName = LastName.text, Address = IOTAAddress.text).Pass == "LabelAddresss": IOTAAddress.hint_text = "Missing Address"; IOTAAddress.hint_text_color = (1,0,0,0); 

	BoxLayout:
		orientation: 'vertical'
		size_hint_x: 0.2
		spacing: 5
		Label:
			id: StatusLabel
			text: "Status"
			font_size: 15
		Button:
			text: "Settings"
		Button:
			text: "Messanger"
			on_press: app.root.current = "Messanger"
		Label:
			text: ""
		Label:
			text: ""
		Button:
			text: 'Back'
			on_press: app.root.current = 'Contacts'
		Button:
			text: 'Quit'
			on_press: root.ShutDown()



